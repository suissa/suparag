{
  "name": "chatbot",
  "bot": {
    "side": "left"
  },
  "user": {
    "side": "right"
  },
  "visual": {
    "theme": "equal",
    "size": {
      "w": "100vw",
      "md:max-x": "800px",
      "y": "100vh",
      "md:max-y": "600px"
    },
    "position": "center.all"
  },
  "behavior": {
    "in": {
      "event": "page.load.full",
      "animation": {
        "start": {
          "opacity": 0,
          "scale": 0
        },
        "end": {
          "opacity": 0.8,
          "scale": 1.2
        },
        "duration": 2000,
        "easing": "easeIn"
      }
    },
    "events": {
      "focus": {
        "scale": 1,
        "opacity": 1,
        "duration": 1000
      }
    }
  }
}
